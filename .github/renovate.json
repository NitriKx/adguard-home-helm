{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreUnstable",
    "group:monorepos",
    "group:recommended",
    "workarounds:all"
  ],
  "labels": ["dependencies", "renovate"],
  "assignees": ["@NitriKx"],
  "reviewers": ["@NitriKx"],
  "schedule": ["before 6am on Monday"],
  "timezone": "UTC",
  "commitMessagePrefix": "chore(deps): ",
  "packageRules": [
    {
      "description": "Automerge patch updates for Helm charts",
      "matchUpdateTypes": ["patch"],
      "matchManagers": ["helmv3"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Automerge minor updates for Helm charts",
      "matchUpdateTypes": ["minor"],
      "matchManagers": ["helmv3"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Automerge patch updates for GitHub Actions",
      "matchUpdateTypes": ["patch"],
      "matchManagers": ["github-actions"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Automerge minor updates for GitHub Actions",
      "matchUpdateTypes": ["minor"],
      "matchManagers": ["github-actions"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Automerge Docker image patch updates",
      "matchUpdateTypes": ["patch"],
      "matchManagers": ["dockerfile", "helm-values"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Group Docker image updates",
      "matchManagers": ["dockerfile", "helm-values"],
      "groupName": "Docker images",
      "groupSlug": "docker-images"
    },
    {
      "description": "Group Helm chart dependencies",
      "matchManagers": ["helmv3"],
      "groupName": "Helm charts",
      "groupSlug": "helm-charts"
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "groupSlug": "github-actions"
    },
    {
      "description": "AdGuard Home Docker image updates",
      "matchPackageNames": ["adguard/adguardhome"],
      "matchManagers": ["dockerfile", "helm-values"],
      "groupName": "AdGuard Home Docker image",
      "groupSlug": "adguard-home-docker"
    },
    {
      "description": "Major updates require manual review",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    }
  ],
  "helm-values": {
    "fileMatch": ["charts/adguard-home/values.yaml"]
  },
  "dockerfile": {
    "fileMatch": ["charts/adguard-home/templates/deployment.yaml"]
  },
  "helmv3": {
    "fileMatch": ["charts/adguard-home/Chart.yaml"]
  },
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "branchPrefix": "renovate/",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{#if isSingleVersion}}v{{newVersion}}{{else}}{{#if newVersion}}{{newVersion}}{{else}}{{#if newDigest}}{{newDigestShort}}{{else}}{{newValue}}{{/if}}{{/if}}{{/if}}",
  "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{footer}}}",
  "prBodyDefinitions": {
    "header": "## ðŸ¤– Renovate Update\n\nThis PR contains the following updates:\n\n",
    "footer": "\n---\n\n### Configuration\n\nðŸ“… **Schedule**: {{schedule}}\n\nðŸš¦ **Automerge**: {{automerge}}\n\nâ™» **Rebasing**: Whenever PR becomes conflicted, or you tick the rebase/retry checkbox.\n\nðŸ”• **Ignore**: Close this PR and you won't be reminded about this update again.\n\n---\n\n - [ ] If you want to rebase/retry this PR, check this box\n\nThis PR has been generated by [Renovate Bot](https://github.com/renovatebot/renovate)."
  }
}
